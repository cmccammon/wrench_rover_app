<div class="row light">
  <div class="col-md-12 col-sm-12">
    <h2>Service center account sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group row">
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label 'First name' %> -->
      <%= f.text_field :first_name, placeholder: 'First name', autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label 'Last name' %> -->
      <%= f.text_field :last_name, placeholder: 'Last name', class: "form-control"  %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label 'Business name' %> -->
      <%= f.text_field :service_center_name, placeholder: 'Business name', class: "form-control"  %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label 'street address' %> -->
      <%= f.text_field :address, placeholder: 'Street address', class: "form-control"  %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label 'Apt, suite, etc...' %> -->
      <%= f.text_field :address2, placeholder: 'Apt, suite, etc...', class: "form-control"  %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label 'zipcode' %> -->
      <%= f.text_field :city, placeholder: "City", class: "form-control"  %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label 'zipcode' %> -->
      <%= f.text_field :zipcode, placeholder: "Zip code", class: "form-control"  %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label :state %> -->
      <% states = %w(AL AK AZ AR CA CO CT DC DE FL GA HI ID IL IN IA KS KY LA ME MA MI MN MO MS
    MT NE NV NH NJ NM NY NC ND OH OK OR PA RI SC SD TN TX UT VA VT WA WI WV WY) %>
      <%= f.select :state, options_for_select(states), {prompt: 'State'},  { class: "form-control"} %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="field">
      <!-- <%= f.label 'zipcode' %> -->
      <%= f.phone_field :phone_number, placeholder: "Phone number", class: "form-control" %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
  <div class="field">
    <!-- <%= f.label :email %> -->
    <%= f.text_field :email, placeholder: 'Email', autofocus: true, class: "form-control"  %>
  </div>
</div>
<div class="col-md-6 col-sm-12">
  <div class="field">
    <!-- <%= f.label :password %> -->
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: "form-control"  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>
</div>
<div class="col-md-6 col-sm-12">
  <div class="field">
    <!-- <%= f.label :password_confirmation %> -->
    <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', autocomplete: "off", class: "form-control" %>
  </div>
</div>
</div>
</div>
<br />
</div>
<div class="col-md-12 col-sm-12 orange" style="margin-bottom:8px;">
  <div>
    <center><%= f.submit "Sign up", class: "btn btn-default" %></center>
  </div>
    <% end %>
</div>
