<div class="container-overflow-wrap">
  <div class='container'>
    <div class='row'>
      <div class='m12'>
        <div class="container" style="margin-top:110px;height:100% !important;">
          <div class="row">
            <div class="col-md-12 col-sm-12">
              <h2><%= @service_center.service_center_name.capitalize %>
              </h2>
              Add a Quote for:
              <div>
                <p>Service:
                  <%= @request.service.to_sentence %></p>
                <p>Description:
                  <%= @request.description %></p>
                <p>Auto:
                  <%= @request.auto.year %>
                  <%= @request.auto.make %>
                  <%= @request.auto.model %>
                </p>
              </div>

              <div class="row">
                <div class="col-md-12 col-sm-12">

                  <%= render 'quote_form' %>

                </div>
              </div>
              <% if service_center_signed_in?%>
              <%= link_to 'Back', sc_dashboard_requests_path %>
            <% else %>
              <%= link_to 'back', requests_path %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
