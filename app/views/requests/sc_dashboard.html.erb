
<!-- Main page content -->
<div class="row">
  <div class="col-md-12 col-sm-12">
    <h3> <%= @service_center.service_center_name %> Dashboard </h3>
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#mainNew">New Requests(<%= @requests.count %>)</a></li>
      <li class="inactive"><a data-toggle="tab" href="#mainPending">Pending bids</a></li>
      <li class="inactive"><a data-toggle="tab" href="#mainAppointments">Appointments</a></li>
    </ul>
    <div class="tab-content" style="border:solid 2px #ff6600;">
      <div id="mainNew" class="tab-pane fade in active">
        <div class="row">
          <div class="col-md-12 col-sm-12">
            <table class='table table-striped'>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Vehicle</th>
                  <th>Request</th>
                  <th>description</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>

                <% @requests.each do |req| %>
                  <tr>

                    <td><%= req.created_at.strftime("%m-%d-%y") %></td>
                    <td><%= req.auto.year %> <%= req.auto.make.capitalize %> <%= req.auto.model.capitalize %></td>
                    <td><%= req.service.to_sentence %></td>
                    <td><%= req.description %></td>
                    <td><%= link_to 'Add quote', add_quote_url(req) %></td>


                <% end %>
                  </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div id="mainPending" class="tab-pane fade">
        <div class="row">
          <div class="col-md-12 col-sm-12">
            <table class='table table-striped'>
              <thead class="thead-default">
                <tr>
                  <th>Date</th>
                  <th>Vehicle</th>
                  <th>Request</th>
                  <th>Description</th>
                  <th>Quote</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
              <%  @service_center.quotes.each do |q| %>
              <tr>
                <td><%= q.request.created_at.strftime("%m-%d-%y") %></td>
                <td><%= q.request.auto.year %> <%= q.request.auto.make.capitalize %> <%= q.request.auto.model.capitalize %></td>
                <td><%= q.request.service.to_sentence %></td>
                <td><%= q.request.description %></td>
                <td><%= q.cost %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
      <div id="mainAppointments" class="tab-pane fade">
        <div class="row">
          <div class="col-md-12 col-sm-12">
          <!-- <b>7/15/16 - Tire Rotation</b><br>
          Service Notes: <i>"We can also look at wear and tear on your tires"</i> -->
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-12">
          <!-- Service Center: <b>Joe's Auto</b> -->
          </div>
          <div class="col-md-6 col-sm-12">
          <!-- Bid Amount: <b>$27.00</b> -->
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 col-sm-12">
          <!-- <span style="color:#ff6600; font-weight:bold;">COMPLETE</span> -->
          </div>
        </div>
    </div>
  </div>
<!--/////////////////// START YOUR LOCATION COLUMN /////////////////////-->
    <div class="col-md-4 col-sm-12">
      <br>
    </div>
  </div>
</div>
