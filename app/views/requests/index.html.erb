
<!--/////////////////// START WELCOME MESSAGE ROW /////////////////////-->
<% if current_user.sign_in_count < 2 %>
	<div class="row welcome">
		<div class="col-md-12 col-sm-12">
			<h1>Welcome back <%= current_user.first_name %></h1>
			We value you as a customer and strive to deliver a solution that is right for you.<br><br>
		</div>
	</div>
	<% end %>
<!--/////////////////// START NOTIFICATION ROW /////////////////////-->
<% if @appointments.empty? or @appointments.completed_true.any? %>
<div class="row apptRow">

</div>
	<% else %>
	<div class="row apptRow">
		<div class="col-md-2 col-sm-12 apptHead" style="line-height:80px;height:80px;text-align:center;">
			<h4>You have a new<br>appointment!</h4>
		</div>
		<% @appointments.each do |a| %>
		<div class="col-md-4 col-sm-12" style="padding:0;">
			<div class="apptHead">Where & When</div>
			<div class="apptText"><%= a.quote.service_center.service_center_name %><br><%= a.selected_appointment %></div>
		</div>
		<div class="col-md-3 col-sm-12" style="padding:0;">
			<div class="apptHead">Your Vehicle</div>
			<div class="apptText"><%= a.quote.request.auto.year %><br><%= a.quote.request.auto.make %> <%= a.quote.request.auto.model %></div>
		</div>
		<div class="col-md-3 col-sm-12" style="padding:0;">
			<div class="apptHead">Services</div>
				<div class="apptText"><%= a.request.service.compact.reject(&:empty?).to_sentence if a.request.service %></div>
		</div>
		<% end %>
	</div>
	<% end %>

<!--/////////////////// START MAINTENANCE LISTINGS COLUMN /////////////////////-->
	<div class="row">
		<div class="col-md-12 col-sm-12">
			<h3>Your Maintenance Requests</h3>
			<ul class="nav nav-tabs">
			  <li class="active"><a data-toggle="tab" href="#mainQuotes">Quotes</a></li>
				<li class="inactive"><a data-toggle="tab" href="#mainOpen">Open</a></li>
			  <li class="inactive"><a data-toggle="tab" href="#mainAppointments">Appointments</a></li>
			  <li class="inactive"><a data-toggle="tab" href="#mainHistory">Past</a></li>
			</ul>
			<div class="tab-content" style="border:solid 2px #ff6600; min-height: 350px;
    overflow: scroll;">
				<div id="mainQuotes" class="tab-pane fade in active">
					<div class="row">
								<% if current_user.quotes.empty? %>
						<div class="col-md-12 col-sm-12">
							<p>No Quotes yet, but our dogs are finding the best services </p>
						</div>
								<% elsif current_user.appointments.any? %>
						<div class="col-md-12 col-sm-12">
							<p>You have selected a quote, check your appointments </p>
						</div>
								<% else %>
					<% current_user.quotes.each do |q| %>
							<%= link_to q.request do %>
					<div class="col-md-12 col-sm-12">
						<b><%= q.request.created_at.strftime("%m/%d/%y") %> - Auto: <b><%= q.request.auto.year %> <%= q.request.auto.make %> <%= q.request.auto.model %></b> - Services: <%= q.request.service.compact.reject(&:empty?).to_sentence %></b><br>
						Your comments: <i><%= q.request.description %></i><br>
						Service Notes: <i><%= q.comment %></i>
					<div class="row">
						<div class="col-md-6 col-sm-12">
						Service Center: <b><%= q.service_center.service_center_name %></b>
						</div>
						<div class="col-md-6 col-sm-12">
						Bid Amount: <b><%= number_to_currency(q.cost) %></b>
						</div>
					</div>
					<br>
				</div>
						<% end %>
					<% end %>
				<% end %>
			</div>
				</div>
				<div id="mainOpen" class="tab-pane fade">
					<% if @requests.blank? %>
					<div class="row">
						<div class="col-md-12 col-sm-12">
							<p>Go create a new <%= link_to 'request', new_request_path %>!</p>
						</div>
					</div>
					<% else %>
				<% @requests.each do |r| %>
					<div class="row">
						<div class="col-md-6 col-sm-12">
							<%= r.created_at.strftime("%m/%d/%y") %> <br/><b>Auto:</b> <%= r.auto.year %> <%= r.auto.make %> <%= r.auto.model %><br/>
							<b>Services:</b> <%= r.service.compact.reject(&:empty?).to_sentence %><br>
							<b>Your comments:</b> <i><%= r.description %></i><br>
						</div>
						<div class="col-md-6 col-sm-12">
						<%= link_to 'Remove', r, method: :delete, class: "btn btn-default" %>
						</div>
					</div><br>
					<% end %>
						<% end %>
				</div>
				<div id="mainAppointments" class="tab-pane fade">
				<% if @appointments.empty? or @appointments.completed_true.any? %>
					<div class="row">
						<div class="col-md-12 col-sm-12">
							<p>No Appointments yet.</p>
						</div>
					</div>
					<% else %>
				<% @appointments.each do |a| %>
					<div class="row">
						<div class="col-md-12 col-sm-12">
						<b><%= a.selected_appointment %> - <%= a.request.service.compact.reject(&:empty?).to_sentence %></b><br>
						Your comments: <i><%= a.request.description %></i><br>
						Service Notes: <i><%= a.quote.comment %></i>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6 col-sm-12">
						Service Center: <b><%= a.quote.service_center.service_center_name %></b>
						</div>
						<div class="col-md-6 col-sm-12">
						Bid Amount: <b><%= a.quote.cost %></b>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 col-sm-12">

						<span style="color:#ff6600; font-weight:bold;"><%= link_to 'Cancel appointment', a, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure you want to cancel this?'} %></span>
						</div>
					</div>
					<%end%>
				<% end %>
				</div>

				<div id="mainHistory" class="tab-pane fade">
				<% @appointments.completed_true.each do |a| %>
					<div class="row">
						<div class="col-md-12 col-sm-12">
						Completed at: <b><%= a.updated_at.strftime("%m/%d/%y") %></b><br>
						Services:<b> <%= a.request.service.compact.reject(&:empty?).to_sentence %></b><br>
						Auto: <b><%= a.request.auto.year %> <%= a.request.auto.make %> <%= a.request.auto.model %></b>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6 col-sm-12">
						Service Center: <b><%= a.quote.service_center.service_center_name %></b>
						</div>
						<div class="col-md-6 col-sm-12">
						Cost: <b><%= a.quote.cost %></b>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 col-sm-12">

						</div>
					</div>
					<%end%>
			</div>
		</div>
	</div>
</div>
